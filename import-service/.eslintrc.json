{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["warn", "single"],
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "eol-last": ["error", "always"],
        "template-curly-spacing": ["error", "always"]
    },
    "ignorePatterns": ["webpack.config.js", "jest.config.ts"]
}
